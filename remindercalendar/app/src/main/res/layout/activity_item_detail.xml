<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemDetailActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_second_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/detail_date_hint"
            android:layout_marginLeft="5dp"
            android:textSize="20sp"
            android:padding="5dp"/>
        <EditText
            android:id="@+id/edittext_second_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/detail_title_hint"
            android:inputType="textMultiLine"
            android:imeOptions="actionNext"
            android:background="@drawable/detail_text_background"
            android:layout_marginLeft="5dp"
            android:textSize="20sp"
            android:padding="5dp"/>
        <EditText
            android:id="@+id/edittext_second_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/detail_content_hint"
            android:textColorHint="@android:color/darker_gray"
            android:background="@drawable/detail_text_background"
            android:layout_marginLeft="5dp"
            android:inputType="textMultiLine"
            android:imeOptions="actionNext"
            android:minHeight="50dp"
            android:padding="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">
        </EditText>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="?android:attr/textCheckMark" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>