<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".toDoOneDay.ItemDetailFragment">

    <TextView
        android:id="@+id/edittext_second_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/detail_date_hint"
        android:textSize="20sp"
        android:padding="5dp"/>
    <EditText
        android:id="@+id/edittext_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/detail_content_hint"
        android:textColorHint="@android:color/darker_gray"
        android:background="@drawable/detail_text_background"
        android:layout_marginLeft="5dp"
        android:inputType="textMultiLine"
        android:imeOptions="actionNext"
        android:minHeight="50dp"
        android:padding="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">
    </EditText>

</LinearLayout>